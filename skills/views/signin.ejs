<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-sm p-4" style="width: 350px;">
            <h2 class="text-center mb-4">Sign In</h2>
            <form id="signInForm" action="/users/login" method="POST">
                <!-- Username Field -->
                <div class="mb-3">
                    <label for="username" class="form-label">Nombre de usuario</label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username"          
                        class="form-control" 
                        placeholder="Ingresa tu nombre de usuario" 
                        required>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="form-control" 
                        placeholder="Ingresa una contraseña" 
                        required>
                        <!--Mensaje de error-->
                        <div id="passwordError" class="invalid-feedback"> <!--Mostrar mensaje de error debajo del recuadro-->
                            La contraseña debe tener al menos 6 caracteres.
                        </div>
                </div>

                <div class="mb-3">
                    <label for="passwordConfirm" class="form-label">Confirma tu contraseña</label>
                    <input 
                        type="password" 
                        id="passwordConfirm" 
                        name="passwordConfirm" 
                        class="form-control" 
                        placeholder="Confirma tu contraseña" 
                        required>
                        <div id="passwordConfirmError" class="invalid-feedback">
                            Las contraseñas no coinciden.
                        </div>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </div>
            </form>

            <!-- Register Link -->
            <p class="mt-3 text-center">
                ¿Ya tienes una cuenta? <a href="/login" class="text-decoration-none">Inicia sesión aquí</a>.
            </p>
        </div>
    </div>

    <!-- Bootstrap JS (optional, for interactivity) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!--Formulario y contraseña-->
    <script>
        const form = document.getElementById('signInForm');
        const password = document.getElementById('password');
        const passwordConfirm = document.getElementById('passwordConfirm');
        const passwordError = document.getElementById('passwordError');
        const passwordConfirmError = document.getElementById('passwordConfirmError');

        form.addEventListener('submit', function(event){
            password.classList.remove('is-invalid'); 
            passwordConfirm.classList.remove('is-invalid');
            passwordError.style.display = 'none';
            passwordConfirmError.style.display = 'none';

            let hasErrors = false;

            //Mirar si contraseñas coindicen
            if (password.value !== passwordConfirm.value){
                passwordConfirm.classList.add('is-invalid'); //para mostrar bordes en rojo
                passwordConfirmError.style.display = 'block';
                hasErrors = true;
            }

            if (password.value.length < 6){
               password.classList.add('is-invalid');
               passwordError.style.display = 'block';
               hasErrors = true;
            }

            // Prevenir el envío si hay errores
            if (hasErrors) {
                event.preventDefault();
            }
        });
    </script>

<!--Footer-->
